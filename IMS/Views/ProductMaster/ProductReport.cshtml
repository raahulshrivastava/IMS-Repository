
@{
    ViewBag.Title = "ProductReport";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    int index = 0;
}

@model IMS.Models.Products.ProductReportViewModel

<div class="row">
    <div class="col-md-4 invoice-col">
        @if (!string.IsNullOrEmpty(Model.ProductName))
        {
            <label>Product : </label>@Model.ProductName<br />
        }

        @if (!string.IsNullOrEmpty(Model.BrandName))
        {
            <label>Brand : </label>@Model.BrandName<br />
        }

        @if (!string.IsNullOrEmpty(Model.CategoryName))
        {
            <label>Category : </label>@Model.CategoryName<br />
        }

    </div>
    <br />
</div>
<div class="row">
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped" id="tblList">
            <thead>
                <tr>
                    <td>S.No.</td>
                    <td>Product Name</td>
                    <td>Generic Name</td>
                    <td>Brand</td>
                    <td>Category</td>
                    <td>Tax</td>
                    <td>Unit</td>
                    <td>MRP</td>
                    <td>Item Type</td>
                    <td>Rack No</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.ProductList.Count() > 0)
                {
                    foreach (var i in Model.ProductList)
                    {
                        index++;
                        <tr>
                            <td>@index</td>
                            <td>@i.ProductName</td>
                            <td>@i.GenericName</td>
                            <td>@i.BrandDes</td>
                            <td>@i.CategoryDes</td>
                            <td>@i.TaxDes</td>
                            <td>@i.UnitDes</td>
                            <td>@i.SalesPriceMRP</td>
                            <td>@i.ItemTypeDescription</td>
                            <td>@i.RackNo</td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10">No Data Found....</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.col -->
</div>