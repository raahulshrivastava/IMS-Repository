
@{
    ViewBag.Title = "SalesReturnReport";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    var index = 0;
}
@model IMS.Models.SalesReturn.SalesReturnReportViewModel



<div class="row">
    <div class="col-md-4 invoice-col">
        <label>Date : </label>@Model.Date<br />
        <label>Customer : </label>@Model.CustomerName<br />
        <label>Return Number : </label>@Model.ReturnNo<br />
        <label>Invoice Number : </label>@Model.InvoiceNo<br />
        <label>Invoice Date : </label>@Model.InvoiceDate<br />
    </div>

</div>
<br />
<br />
<div class="row">
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped" id="tblList">
            <thead>
                <tr>
                    <td>Sr No.</td>
                    <td>Product</td>
                    <td>Qauntity</td>
                    <td>Free Qauntity</td>
                    <td>Total Quantity</td>
                    <td>Return Quantity</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.DetailList.Count() > 0)
                {
                    foreach (var i in Model.DetailList)
                    {
                        index++;
                        <tr>
                            <td>@index</td>
                            <td>@i.Product</td>
                            <td>@i.Quantity</td>
                            <td>@i.FreeQuantity</td>
                            <td>@i.TotalQuantity</td>
                            <td>@i.ReturnQuantity</td>
                           
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="14">No Data Found....</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.col -->
</div>



