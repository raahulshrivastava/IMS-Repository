@using IMS.Utilities;
@{
    ViewBag.Title = "StockInInvoiceReport";
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
    int index = 0;
}
@model IMS.Models.StockIn.StockInInvoiceReportViewModel

<div class="row">
    <div class="col-md-4 invoice-col" style="font-size: 18px;">
        <label>Stock In Date : </label> @Model.StockInDate<br />
        <label>Stock In Number : </label> @Model.StockInNumber<br />
    </div>   
</div>
<br />
<div class="row">
    <div class="col-xs-12 table-responsive">
        <table class="table table-striped" id="tblList">
            <thead>
                <tr>
                    <td>S.No.</td>
                    <td>Category</td>
                    <td>Product</td>
                    <td>Unit</td>
                    <td>Qunatity</td>
                    @if (UserSession.StoreType == 0)
                    {
                        <td>Batch Number</td>
                        <td>Expiry Date</td>
                    }
                </tr>
            </thead>
            <tbody>
                @if (Model.DetailList.Count() > 0)
                {
                    foreach (var i in Model.DetailList)
                    {
                        index++;
                        <tr>
                            <td>@index</td>
                            <td>@i.Category</td>
                            <td>@i.Product</td>
                            <td>@i.Unit</td>
                            <td>@i.Quantity</td>
                            @if (UserSession.StoreType == 0)
                            {
                                <td>@i.BatchNumber</td>
                                <td>@i.ExpiryDate</td>
                            }
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">No Data Found....</td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.col -->
</div>
